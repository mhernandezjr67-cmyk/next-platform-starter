  <script>
    // Update year
    document.getElementById("year").textContent = new Date().getFullYear();

    // Customize your email here:
    const BUSINESS_EMAIL = "yourname@yourdomain.com"; // <-- change this
    const emailLink = document.getElementById("emailLink");
    emailLink.href = `mailto:${BUSINESS_EMAIL}?subject=${encodeURIComponent("AI Automation Inquiry")}`;
    emailLink.textContent = "Or email us";

    // Simple mailto-based form submit (no backend needed)
    document.getElementById("contactForm").addEventListener("submit", function (e) {
      e.preventDefault();

      const name = document.getElementById("name").value.trim();
      const email = document.getElementById("email").value.trim();
      const company = document.getElementById("company").value.trim();
      const goal = document.getElementById("goal").value;
      const message = document.getElementById("message").value.trim();

      const subject = `AI Automation Inquiry — ${name}${company ? " (" + company + ")" : ""}`;
      const body =
`Name: ${name}
Email: ${email}
Company: ${company || "—"}
Goal: ${goal}

Details:
${message || "—"}`;

      window.location.href = `mailto:${BUSINESS_EMAIL}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
    });
  </script>
